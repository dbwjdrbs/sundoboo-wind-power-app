<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 흐릿한 그림자 레이어 -->
    <item>
        <shape android:shape="rectangle">
            <!-- 흐릿한 검정색 (반투명) -->
            <solid android:color="#66000000"/>
            <corners android:radius="4dp"/>
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp"/>
        </shape>
    </item>

    <!-- EditText 배경 레이어 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>

</layer-list>
