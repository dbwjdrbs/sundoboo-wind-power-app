<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#99000000"
    android:gravity="bottom">

    <LinearLayout
        android:id="@+id/di_dd_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_border"
        android:minWidth="300dp"
        android:orientation="vertical"
        android:padding="20dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <View
                android:id="@+id/di_dd_closeBar"
                android:layout_width="30dp"
                android:layout_height="5dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:background="#60478A81" />

            <Button
                android:id="@+id/di_dd_closeButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/ic_close_24" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/di_dd_content1"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:text="Latitude : "
                android:textAlignment="center"
                android:textColor="#478A81"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/dl_dd_et1"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:singleLine="true"
                android:maxLines="1"
                android:background="@drawable/et_shadow" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/di_dd_content2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:text="Longitude : "
                android:textAlignment="center"
                android:textColor="#478A81"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/dl_dd_et2"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:singleLine="true"
                android:maxLines="1"
                android:background="@drawable/et_shadow" />
        </LinearLayout>


        <Button
            android:id="@+id/di_dd_submitButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:backgroundTint="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            android:text="좌표 등록"
            android:textAlignment="textEnd"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>